
<div class="container">
<% if @post.errors.any? %>
<div class = "alert alert-danger">
<h2>The following errors prevented the post from getting created</h2>
<ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
</div>
<% end %>

<br/>
    <%= link_to '<span class="icon"> <i class="fa fa-chevron-left"></i></span> Back'.html_safe,posts_url, method:'get',class:"btn btn-primary"%>

    <h1>Create Post </h1>        

    <%= form_for(:posts, url: posts_path) do |f| %>  
            
        <div class="form-group">
            <%= f.label :title %>:
            <%= f.text_field :title, placeholder: 'Enter the post title here', class: 'form-control',required:true %>
        </div>

        <div class="form-group">
            <%= f.label :body %>:
            <%= f.text_area :body, class: 'form-control',required:true %><br />
        </div>

        <div class="form-group">
            <%= f.submit "Create", class: 'btn btn-primary btn-block' %>
        </div>
    <% end %>
</div>
